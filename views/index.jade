extends layout

doctype html
html(lang='en')
	head
		meta(charset='utf-8')
		title Advance Wars Clone - Homepage
		meta(name='viewport', content='width=device-width, initial-scale=1.0')
		meta(name='description', content='Website for SFSU Csc667 Final Project')
		meta(name='author', content='Jason Newman, Josh Nagel, Evan Wong, Davy Khok')
		link(href='/stylesheets/bootstrap.css', rel='stylesheet', type='text/css')
		link(href='/stylesheets/style.css', rel='stylesheet', type='text/css')
	body
		block content
			div.index-page
				div.container.center-div
					form(name="login-user", method="post", action="/users/login")
						div.input
							span.label Username:
							input(type="text", name="username")
						div.input
							span.label Password:
							input(type="text", name="password")
						div.actions
							input(type="submit", value="Login")
					br
					a(href='./lobby') Test Link to Lobby
					br
					a(href='./registration') Sign Up
