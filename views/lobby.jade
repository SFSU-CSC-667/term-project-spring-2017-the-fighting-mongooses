extends layout

doctype html
html(lang='en')
	head
		meta(charset='utf-8')
		title Advance Wars Clone - Game Lobby
		meta(name='viewport', content='width=device-width, initial-scale=1.0')
		meta(name='description', content='Website for SFSU Csc667 Final Project')
		meta(name='author', content='Josh Nagel, Jason Newman, Evan Wong, Davy Khok')
		link(href='/stylesheets/bootstrap.css', rel='stylesheet')
		link(href='/stylesheets/bootstrap-responsive.css', rel='stylesheet')
		link(href='/stylesheets/style.css', rel='stylesheet')
	body
		block content
			.container
			div.header_content
				div.login
					div.user-logo
						img(src='', alt='user photo')
						a(id='login-out', href='#') Logout
					a(href='#'): img.logo(src='#', alt='game logo')
					h1(id='title') Advance Wars Clone Game Lobby
			div.body_content
				img(src='', alt='create game')
				form(action='', method='get')
					input(type='submit', value='Create Game')
				div.table_content
					table#lobby-table
						thead
							tr
								th Players
								th Title
								th Map
						tbody
							tr
								td
									form(action='', method='get')
										input(type='submit', value='Join Game')

				div.chat_content
					h3 Chat box goes here
